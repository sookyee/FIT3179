{
	"$schema": "https://vega.github.io/schema/vega-lite/v4.json",

	"width": 800,
	"height": 300,
	"title": "1995                                                       2000                                                   2011",
	"background": "#e6f4fd",
	"projection": { "type": "equalEarth" },
	"data": {
		"url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
		"format": {
			"type": "topojson",
			"feature": "ne_110m_admin_0_countries"
		}
	},

	"transform": [
		{

			"lookup": "properties.NAME",
			"from": {
				"data": {
					"url": "https://raw.githubusercontent.com/sookyee/FIT3179/main/educational_expenditure_.json"
				},
				"key": "country",
				"fields": [ "Year1995", "Year2000", "Year2005", "Year2011" ]
			}

		},
		{
			"calculate": "datum.Year1995 + 0",
			"as": "(%) of GDP 1995"
		},
		{
			"calculate": "datum.Year2000 + 0",
			"as": "2000"
		},
		{
			"calculate": "datum.Year2005 + 0",
			"as": "2005"
		},
		{
			"calculate": "datum.Year2011 + 0",
			"as": "2011"
		}
	],
	"hconcat": [

		{
			"mark": { "type": "geoshape" },
			"encoding": {
				"color": {
					"field": "(%) of GDP 1995",
					"type": "quantitative",
					"scale": {
						"type": "linear",
						"scheme": "tealblues"
					}

				},
				"tooltip": [
					{
						"field": "properties.NAME",
						"type": "nominal",
						"title": "Country"
					},
					{
						"field": "(%) of GDP 1995",
						"type": "quantitative",
						"title": "Expenses(%)"
					}
				]
			}
		},

		{
			"mark": { "type": "geoshape" },
			"encoding": {

				"color": {
					"field": "2005",
					"type": "quantitative",
					"scale": {
						"type": "linear",
						"scheme": "tealblues"
					}

				},
				"tooltip": [
					{
						"field": "properties.NAME",
						"type": "nominal",
						"title": "Country"
					},
					{
						"field": "2005",
						"type": "quantitative",
						"title": "Expenses(%)"
					}
				]
			}
		},
		{
			"mark": { "type": "geoshape" },
			"encoding": {

				"color": {
					"field": "2011",
					"type": "quantitative",
					"scale": {
						"type": "linear",
						"scheme": "tealblues"
					}

				},
				"tooltip": [
					{
						"field": "properties.NAME",
						"type": "nominal",
						"title": "Country"
					},
					{
						"field": "2011",
						"type": "quantitative",
						"title": "Expenses(%)"
					}
				]
			}
		}
	]
}
