{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "data": {
    "values": vanAreas,
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [{
    "lookup": "properties.NAME",
    "from": {
      "data": {
        "values": populations
      },
      "key": "Area",
      "fields": ["Population"]
    }
  }],
  "projection": {
    "type": "mercator"
  },
  "mark": "geoshape", 
  "encoding": {
    "fill": {
      "field": "Population",
      "type": "quantitative"
    },
    "stroke": {
      "value" : "white"
    },
    "tooltip": 
    [
      {"field": "properties.NAME", "title": "Name","type": "nominal"},
      {"field": "properties.population", "title": "Population", "type": "quantitative"}
    ]
  }
}
