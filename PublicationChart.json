{
	"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
	"description": "A simple grid of bar charts to compare performance data.",
	"background": "#e6f4fd",
	"data": {
		"url": "https://raw.githubusercontent.com/sookyee/FIT3179/main/TheTimesRanking.json"
	},
	"transform": [
		{
			"filter": "(datum.university_name === 'Harvard University' || datum.university_name ==='Massachusetts Institute of Technology' || datum.university_name ==='Stanford University' || datum.university_name ==='California Institute of Technology' || datum.university_name ==='University of Cambridge' || datum.university_name ==='Princeton University') "
		}
	],
	"selection": {
		"Yr": {
			"type": "multi"
		}
	},
	"width": 100,
	"height": { "step": 4 },
	"spacing": 30,
	"mark": "bar",
	"encoding": {
		"y": {
			"field": "research",
			"type": "quantitative",
			"title": "Research"
		},
		"x": {
			"field": "university_name",
			"type": "ordinal",
			"title": null,
			"axis": {
				"labelAngle": -50,
				"tickSize": 0,
				"labelFontSize": 10,
				"labelPadding": 5
			}
		},
		"tooltip": [
			{
				"field": "university_name",
				"type": "ordinal",
				"title": "University name"
			},
			{
				"field": "year",
				"type": "ordinal",
				"title": "Year"
			},
			{
				"field": "research",
				"type": "quantitative",
				"title": "Research"
			},
			{
				"field": "teaching",
				"type": "quantitative",
				"title": "Teaching quality"
			}
		],
		"fillOpacity": {
			"condition": {
				"selection": "Yr",
				"value": 1
			},
			"value": 0.3
		},
		"color": {
			"field": "teaching",
			"type": "quantitative",
			"legend": {
				"orient": "right",
				"titleOrient": "right"
			},
			"title": "Teaching quality (%)",
			"scale": { "scheme": "lighttealblue" }
		},
		"column": {
			"field": "year",
			"title": "Year",
			"header": { "labelAngle": 0 }
		}
	},
	"config": {
		"style": {
			"guide-title": {
				"align": "center",
				"baseline": "middle",
				"dx": 0,
				"dy": 0,
				"fontWeight": 800,
				"fontSize": 12,
				"fontStyle": "arial"
			},
			"guide-label": {
				"align": "left",
				"baseline": "middle",
				"dx": 3,
				"fontWeight": "normal",
				"fontSize": 11,
				"fontStyle": "arial"
			}

		}
	}
}