{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "transform": [ { "filter": "(datum.university_name === 'Harvard University' || datum.university_name ==='Massachusetts Institute of Technology' || datum.university_name ==='Stanford University' || datum.university_name ==='California Institute of Technology' || datum.university_name ==='University of Cambridge' || datum.university_name ==='Princeton University')" } ],
  "width": "container",
  "background": "#e6f4fd",
  "height": 300,
  "title": "Total students",
  "data": { "url": "https://raw.githubusercontent.com/sookyee/FIT3179/main/TheTimesRankingModified.json" },
  "mark": "area",
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": { "grid": false }
    },
    "y": {
      "field": "num_students",
      "type": "quantitative",
      "title": "",
      "axis": { "grid": false }
    },
    "color": {
      "field": "university_name",
      "type": "ordinal",
      "scale": { "range": [ "purple", "#ff0000", "teal", "#1f77b4", "#fdae6b", "#969696" ] },
      "legend": null
    },
    "row": {
      "field": "university_name",
      "type": "nominal",
      "title": ""
    }
  },
  "config": {
    "style": {
      "guide-title": {
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": 0,
        "fontWeight": 800,
        "fontSize": 12,
        "fontStyle": "arial"
      },
      "guide-label": {
        "align": "left",
        "baseline": "middle",
        "dx": 3,
        "fontWeight": "normal",
        "fontSize": 11,
        "fontStyle": "arial"
      }

    }
  }
}
